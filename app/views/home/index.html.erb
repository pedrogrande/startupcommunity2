<h3>Startup Community Posts</h3>

<div class="row">
	<div class="col-md-6">
		<% if user_signed_in? %>
			<%= simple_form_for(@post, remote: true) do |f| %>
			  	<%= f.error_notification %>

			  	<div class="form-group">
			    	<%= f.input :title, input_html: { class: 'form-control'} %>
			    </div>
			    <div class="form-group">
			    	<%= f.input :content, input_html: { class: 'form-control'} %>
			  	</div>

			  	<div class="form-actions">
			    	<%= f.button :submit %>
			  	</div>
			<% end %>
		<% end %>

	</div>

	<div class="col-md-6">
		<h2>Recent posts <span class="badge" id="posts_count"><%= @posts.count %></span></h2>
		
		<div id="posts">
			<%= render @posts %>
		</div>

	</div>
</div>
